name:                alan
version:             0.1.0.0
synopsis:            Haskell interpreter as a service
-- description:
homepage:            alan.github.io
license:             BSD3
license-file:        LICENSE
author:              Hans Hoglund
maintainer:          hans@hanshoglund.se
-- copyright:
category:            Development
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  exposed-modules:    Alan
  -- other-modules:
  -- other-extensions:
  build-depends:       base         >=4.8       && <4.9
                     , mtl          >= 2.2.1    && < 3
                     , value-supply >= 0.6      && < 1
                     , aeson        >= 0.8.0.2 && < 1
                     , process      >= 1.2.3.0  && < 2
                     , ghc-paths    >= 0.1.0.9  && < 1
                     , bytestring   >= 0.10.6.0 && < 1
                     , cryptohash   >= 0.11.6   && < 1
                     , optparse-applicative >= 0.11.0.2 && < 1
                     , directory    >= 1.2.2.0  && < 2
                     , filepath     >= 1.4.0.0  && < 2
                     , scotty       >= 0.10.2   && < 1
                     , wreq         >= 0.4.0.0  && < 1
                     , containers   >= 0.5.6.2  && < 1
                     -- TODO optional
                     , hint         >= 0.4.2.3  && < 1
  hs-source-dirs:      src
  default-language:    Haskell2010

executable alan
  build-depends:       base >=4.8 && <4.9,
                       alan == 0.1.0.0
  hs-source-dirs:      src
  main-is:             Main.hs
  build-depends:       base         >=4.8       && <4.9
                     , mtl          >= 2.2.1    && < 3
                     , value-supply >= 0.6      && < 1
                     , aeson        >= 0.8.0.2 && < 1
                     , process      >= 1.2.3.0  && < 2
                     , ghc-paths    >= 0.1.0.9  && < 1
                     , bytestring   >= 0.10.6.0 && < 1
                     , cryptohash   >= 0.11.6   && < 1
                     , optparse-applicative >= 0.11.0.2 && < 1
                     , directory    >= 1.2.2.0  && < 2
                     , filepath     >= 1.4.0.0  && < 2
                     , scotty       >= 0.10.2   && < 1
                     , wreq         >= 0.4.0.0  && < 1
                     , containers   >= 0.5.6.2  && < 1
                     -- TODO optional
                     , hint         >= 0.4.2.3  && < 1
  default-language:    Haskell2010

test-suite test-alan
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    build-depends:    base          >=4.8 && <4.9
                    , alan          == 0.1.0.0
                    , mtl           >= 2.2.1    && < 3
    main-is:          TestMain.hs
    build-depends:    base         >=4.8       && <4.9
                    , mtl          >= 2.2.1    && < 3
                    , value-supply >= 0.6      && < 1
                    , aeson        >= 0.8.0.2 && < 1
                    , process      >= 1.2.3.0  && < 2
                    , ghc-paths    >= 0.1.0.9  && < 1
                    , bytestring   >= 0.10.6.0 && < 1
                    , cryptohash   >= 0.11.6   && < 1
                    , optparse-applicative >= 0.11.0.2 && < 1
                    , directory    >= 1.2.2.0  && < 2
                    , filepath     >= 1.4.0.0  && < 2
                    , scotty       >= 0.10.2   && < 1
                    , wreq         >= 0.4.0.0  && < 1
                    , containers   >= 0.5.6.2  && < 1
                    -- TODO optional
                    , hint         >= 0.4.2.3  && < 1
    default-language:
